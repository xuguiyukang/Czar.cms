@model ContentViewModel
@using Humanizer;
@{
    ViewData["Title"] = "内容列表";
}

<div clas="panel panel=default todo-panel">
    <div class="panel-heading">@ViewData["Title"]</div>
    <table class="table table-hover">
        <thead>
            <tr>
                <td> <input type="checkbox" class="done-checkbox" /></td>
                <td>序号</td>
                <td>标题</td>
                <td>内容</td>
                <td>添加时间</td>
            </tr>
        </thead>
        @foreach (var i in Model.Contents)
        {
            <tr>
                <td>
                    <input type="checkbox" class="done-checkbox" />
                </td>
                <td>@i.id</td>
                <td>@i.title</td>
                <td>@i.content</td>
                <td>@i.add_time.Humanize()</td>
            </tr>
        }
    </table>
</div>

